@model TwitterClone.Models.Person
@{
    ViewBag.Title = "Sign Up";
}

<div class="jumbotron">
    <div class="row">
        <div class="col">
            <h2>Sign Up with Twitter Clone</h2>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-success">@ViewBag.Message</div>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger">@ViewBag.Error</div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col">
            @using (Html.BeginForm("SignUp", "Login", FormMethod.Post, new { @id = "loginForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control ", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.UserId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PasswordHash, new { @class = "form-control ", placeholder = "Password", @type = "password" })
                        @Html.ValidationMessageFor(m => m.PasswordHash)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control ", placeholder = "Full Name" })
                        @Html.ValidationMessageFor(m => m.FullName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <button class="btn btn-info" type="submit">Sign up</button>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col4">
            << Back to @Html.ActionLink("Login", "Login", "Login", new { @class = "btn btn-link" })
        </div>
    </div>
</div>
